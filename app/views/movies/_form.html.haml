.navbar-form	
	= form_for @movie, html: {multipart: true } do |f|
		- if @movie.errors.any?
			#error_explanation
				%h2= "#{pluralize(@movie.errors.count, "error")} prohibited this movie from being saved:"
				%ul
					- @movie.errors.full_messages.each do |msg|
						%li= msg

		.field
			= f.label :title
			= f.text_field :title, class: "form-control"
		.field
			= f.label :length
			= f.time_select :length, class: "form-control"
		.field
			= f.label :star
			= f.text_field :star, class: "form-control"
		.field
			= f.label :description
			= f.text_area :description, class: "form-control"
		.field
			= f.label :rating
			= f.text_field :rating, class: "form-control"
		.field
			=f.label :image
			=f.file_field :image, class: "form-control"
		.actions
			= f.submit 'Save Movie', class: "btn btn-sm btn-info"
