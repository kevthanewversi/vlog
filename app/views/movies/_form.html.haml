.navbar-form	
	= form_for @movie, html: {multipart: true } do |f|
		- if @movie.errors.any?
			#error_explanation
				%h2= "#{pluralize(@movie.errors.count, "error")} prohibited this movie from being saved:"
				%ul
					- @movie.errors.full_messages.each do |msg|
						%li= msg

		.field
			= f.label :title
			= f.text_field :title
		.field
			= f.label :length
			= f.time_select :length
		.field
			= f.label :star
			= f.text_field :star
		.field
			= f.label :description
			= f.text_area :description
		.field
			= f.label :rating
			= f.text_field :rating
		.field
			=f.label :image
			=f.file_field :image
		.actions
			= f.submit 'Save Movie'
