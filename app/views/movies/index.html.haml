%h1 Listing movies

%table
  %thead
    %tr
      %th Title
      %th Length
      %th Star
      %th Description
      %th 
      %th
      %th
      
  %tbody
    - @movies.each do |movie|
      %tr
        %td= image_tag movie.image.url(:medium)
        %td= movie.title
        %td= movie.length
        %td= movie.star
        %td= movie.description
        %td= link_to 'Show', movie
        %td= link_to 'Edit', edit_movie_path(movie)
        %td= link_to 'Destroy', movie, :method => :delete, :data => { :confirm => 'Are you sure?' }

