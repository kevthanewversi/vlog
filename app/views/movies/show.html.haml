.row
	.col-md-1
	.col-md-10
		.panel.panel-default
			.panel-body
				.row
					.col-md-4 
						%p 
							= image_tag @movie.image.url(:medium) 
						.table-responsive
							%table
								%tr
									%td
										%b Title: 
										= @movie.title
								%tr
									%td
										%b Length: 
										= @movie.length
								%tr
									%td
										%b Star: 
										= @movie.star
								%tr
									%td
										%b Description: 
										= @movie.description
								%tr
									%td
										%b Rating: 
										= @movie.rating
					.col-md-7.col-md_offset-1
						- if @reviews.blank?
							%h3 No reviews just yet. would you like to add some?
							= link_to "Write review", new_movie_review_path(@movie), class: "btn btn-danger"

						- else 
							= @reviews.each do |review|
								%h5 
									= review.rating 
								%h5 
									= review.comment
								 

 

				= link_to 'New Review', new_movie_review_path(@movie)

				= link_to 'Edit', edit_movie_path(@movie)
				|
				= link_to 'Back', movies_path
					