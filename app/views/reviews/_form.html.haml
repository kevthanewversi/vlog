				.panel-body
			= form_for [@movie,@review] do |f|
				- if @review.errors.any?
					#error_explanation
						%h2= "#{pluralize(@review.errors.count, "error")} prohibited this review from being saved:"
						%ul
							- @review.errors.full_messages.each do |msg|
